<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carview_main_tablero"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <CheckBox
                android:id="@+id/btn_radio_buton_comprobacion"
                android:layout_width="wrap_content"
                android:layout_height="70dp"/>

            <LinearLayout
                android:id="@+id/linearlayout_comprobacion"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/btn_radio_buton_comprobacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/titulo_comprobacion"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/btn_eliminar_comprobacion"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="-24.2dp"
                    android:background="@drawable/ic_baseline_delete_24_alert"
                    style="@style/colorblanco"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>